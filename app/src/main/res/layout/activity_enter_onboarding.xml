<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/MeTimeSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MeTime"
        android:textSize="19sp"
        android:fontFamily="@font/raleway_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_welcome_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/MeTimeSign"/>

    <TextView
        android:id="@+id/WelcomeTo"
        android:text="Welcome to"
        android:fontFamily="@font/raleway_bold"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="-5dp"
        android:id="@+id/SalonNameTV"
        android:text="The Gallery Salon!"
        android:fontFamily="@font/raleway_bold"
        android:layout_width="3000dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/WelcomeTo"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="19dp"
        android:id="@+id/followSteps"
        android:text="@string/follow_the_steps_to_schedule_your_nex_appointment_with_us"
        android:fontFamily="@font/raleway_medium"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SalonNameTV"
        android:textColor="@color/gray2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/SkipBtn"
            android:layout_width="149dp"
            android:layout_height="71dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primary"
            android:text="Skip"
            android:fontFamily="@font/raleway_bold"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/StartBtn"
            android:layout_width="149dp"
            android:layout_height="71dp"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:text="Start"
            android:fontFamily="@font/raleway_bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>