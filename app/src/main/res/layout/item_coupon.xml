<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="61dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp"
    android:foreground="@drawable/background_coupon">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/CouponIconIV"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/coupon_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/percentCouponTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10% off"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_bold"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/CouponIconIV"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/CodeCouponTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="use code FREE10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CouponIconIV"
            android:fontFamily="@font/raleway_medium"
            android:textSize="12sp"
            android:textColor="#3E3E3E"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>