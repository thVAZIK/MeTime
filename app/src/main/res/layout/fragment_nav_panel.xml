<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BackgroundCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80D9D9D9">

    <androidx.cardview.widget.CardView
        android:id="@+id/SidePanelCV"
        android:layout_width="281dp"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="60dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="45dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/MenuBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/menu"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/NavigationSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="-7dp"
                android:fontFamily="@font/raleway_medium"
                android:text="Navigation"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@id/MenuBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NavigationSign">

                <LinearLayout
                    android:id="@+id/HomeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/HomeIconIV"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/HomeSignTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Home"
                        android:textColor="@color/nav_menu_selected"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ProfileBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="90dp">

                        <ImageView
                            android:id="@+id/UserAvatarIV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_avatar" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/ProfileSignTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Profile"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/BookingsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/BookingsIconIV"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/book" />

                    <TextView
                        android:id="@+id/BookingsSignTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Bookings"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SupportBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/SupportIconIV"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/support" />

                    <TextView
                        android:id="@+id/SupportSignTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Support"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>