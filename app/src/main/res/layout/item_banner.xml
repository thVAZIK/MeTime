<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/main">

    <ImageView
        android:id="@+id/BannerImageIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/placeholder_banner"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/BannerTextTV"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Find the best hair stylist for you"
        android:fontFamily="@font/raleway_bold"
        android:textSize="28sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/OpenLinkIconIV"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/open_link_icon"
        android:visibility="invisible"/>

</androidx.cardview.widget.CardView>