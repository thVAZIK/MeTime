<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="21dp"
        android:id="@+id/SalonNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luna's Salon"
        android:fontFamily="@font/raleway_bold"
        android:textSize="16sp"
        android:textColor="@color/gray3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MasterFullNameTV"
            android:text="with Paty Sinclair"
            android:fontFamily="@font/raleway_medium"
            android:textSize="16sp"
            android:textColor="@color/gray2"/>
        <ImageView
            android:layout_marginTop="1dp"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/dot"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/KmsTV"
            android:text="5.0 Kms"
            android:fontFamily="@font/raleway_medium"
            android:textSize="16sp"
            android:textColor="@color/gray2"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ServiceTV"
        android:text="Basic Manicure"
        android:fontFamily="@font/raleway_medium"
        android:textSize="16sp"
        android:textColor="@color/gray2"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="21dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateTV"
            android:text="8 Mar 2022"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="16sp"
            android:textColor="@color/gray2"/>
        <ImageView
            android:layout_marginTop="1dp"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/dot"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CostTV"
            android:text="$30"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="16sp"
            android:textColor="@color/gray2"/>
    </LinearLayout>
    
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/almost_white_gray"/>
</LinearLayout>